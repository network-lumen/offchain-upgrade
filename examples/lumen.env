# Required
UPGRADE_HEIGHT=800000
BIN_NEW=/usr/local/bin/lumend-1.4.0

# Optional (recommended)
# BIN_NEW_SHA256=...   # sha256 of BIN_NEW to prevent wrong/tampered binary

# Optional
SERVICE_NAME=lumend
BIN_ACTIVE=/usr/local/bin/lumend
RPC=http://127.0.0.1:26657

# Default check interval in seconds
CHECK_INTERVAL=1

# Block distance threshold to switch between fast/slow checking
DYNAMIC_INTERVAL_THRESHOLD=100

# Check interval in seconds when remaining blocks > 100
DYNAMIC_INTERVAL_FAR=30

# Check interval in seconds when remaining blocks <= 100
DYNAMIC_INTERVAL_NEAR=1